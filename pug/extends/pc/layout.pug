extends /extends/layout

//- append vars

block html
  doctype html
  html(lang="ja")
    head
      block head
        block metas
          include /includes/metas
          link(rel="shortcut icon" href=relative('favicon.ico'))
        block styles
          link(rel="stylesheet" href=relative('styles/style.css') media="all")
        block scripts
          script(src=relative('scripts/vendor.js'))
          script(src=relative('scripts/bundle.js'))
    body&attributes(bodyAttrs)
      block body
        .wrap
          block header
            header
          block contents
          block footer
            footer
